# VSS 前端统一环境配置
# 合并了 .env.development, .env.production, .env.proxy 的配置
# 支持开发和生产环境的统一配置管理

# ======================
# API 配置
# ======================
# 生产环境 - 通过 nginx 反向代理
VITE_API_BASE_URL=/api
VITE_WS_URL=/ws


# 开发环境备用配置（通过环境变量覆盖）
# VITE_API_BASE_URL=http://localhost:3002
# VITE_WS_URL=ws://localhost:3002/ws


# ======================
# 应用信息
# ======================
VITE_APP_TITLE=VSS Vision Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=VSS 视觉智能平台 - 企业级视觉处理解决方案

# ======================
# 环境配置
# ======================
NODE_ENV=production
VITE_PORT=3000

# ======================
# 功能开关
# ======================
VITE_DEV_TOOLS=false
VITE_DEBUG_MODE=false
VITE_HOT_RELOAD=false
VITE_ENABLE_MOCK=false

# ======================
# 文件上传配置
# ======================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,video/*,.pdf,.doc,.docx

# ======================
# API 请求配置
# ======================
VITE_API_TIMEOUT=15000
VITE_API_RETRY_COUNT=3
VITE_LOG_LEVEL=warn

# ======================
# 性能配置
# ======================
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION=86400
VITE_ENABLE_SERVICE_WORKER=false

# ======================
# 安全配置
# ======================
VITE_CSRF_PROTECTION=true
VITE_XSS_PROTECTION=true
VITE_ENABLE_CSP=true
VITE_TRUSTED_DOMAINS=localhost

# ======================
# 主题配置
# ======================
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# ======================
# 第三方服务配置
# ======================
VITE_MAP_API_KEY=
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
