# VSS 前端环境变量配置 - 反向代理版本
# 使用相对路径，避免硬编码端口

# API 配置 - 通过 nginx 反向代理
VITE_API_BASE_URL=/api
VITE_WS_URL=/ws

# 应用信息
VITE_APP_TITLE=VSS Vision Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Machine Vision Data Analysis Platform

# 开发配置
VITE_PORT=3000
NODE_ENV=production

# 脚本服务配置（如果有）
VITE_SCRIPT_SERVICE_URL=/api/scripts

# 上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.bmp,.tiff

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_HOT_RELOAD=true

# 主题配置
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# 地图配置（如果使用）
VITE_MAP_API_KEY=

# 第三方服务配置
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# 安全配置
VITE_ENABLE_CSP=true
VITE_TRUSTED_DOMAINS=localhost

# 缓存配置
VITE_CACHE_DURATION=3600000
VITE_ENABLE_SERVICE_WORKER=false
